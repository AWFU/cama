<h3>自訂頁面/文章列表</h3>

<%= link_to("新增頁面", admin_customizedpages_path(), :method => :post) %>

<table border="0" cellspacing="0" cellpadding="3">
  <% @customizedpages.each do |customizedpage| %>
  <tr>
    <td><%# customizedpage.get_status %></td>
    <td><%= link_to(customizedpage.title, admin_customizedpage_path(customizedpage)) %></td>
    <td>
      <%# link_to(get_change_status_name(customizedpage), change_status_admin_customizedpage_cate_customizedpage_path(@customizedpage_cate, customizedpage), :method => :post) %>

      <%# customizedpages_helper %>
      <%# link_to("編輯", edit_admin_customizedpage_cate_customizedpage_path(@customizedpage_cate, customizedpage)) %>
      <%= link_to("編輯", edit_admin_customizedpage_path(customizedpage)) %>
      <%= link_to("刪除", admin_customizedpage_path(customizedpage), :method => :delete, :data => {:confirm => "確定刪除？"}) %>
    </td>
  </tr>
  <% end %>
</table>