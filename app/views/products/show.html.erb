<script type="text/javascript">

    editor.output();

    $('.bxslider-1').bxSlider({
      slideWidth: $('.sliderContainer').width(),
      pagerCustom: '#bx-pager',
      nextSelector: '#slider-next',
      prevSelector: '#slider-prev',
      nextText: 'Onward →',
      prevText: '← Go back'
    });  

    $('.bxslider-2').bxSlider({
      // randomStart:true,
      // pager:false,
      // slideWidth: 85,   
      // minSlides: 3,
      // maxSlides: 3,
      // slideMargin: 5

      pager: false,
      minSlides: 1,
      maxSlides: 3,
      slideWidth: $('.sliderContainer').width()/3,
      slideMargin: 10
    });  
    
    $(function(){ 
      var _showTab = 0;
      var $defaultLi = $('.tab li').eq(_showTab).addClass('active');
      $($defaultLi.find('a').attr('href')).siblings().hide();
      $('.tab li').click(function() {   
        var $this = $(this),
          _clickTab = $this.find('a').attr('href');   
        $this.addClass('active').siblings('.active').removeClass('active');   
        $(_clickTab).stop(false, true).fadeIn().siblings().hide(); 
        return false;
        }).find('a').focus(function(){
          this.blur();
      });
    });

    $(function(){ 
      $("#grind select").hide()
      $("#grind input").click(function(){
        if( $(this).is(":checked") ){
          $("#grind select").show()
        }
        else{
          $("#grind select").hide()
        }
      });
    })    

</script>